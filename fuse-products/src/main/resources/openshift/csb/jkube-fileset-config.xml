<configuration>
    <images>
        <image>
            <name>${project.build.finalName}</name>
            <alias>${project.build.finalName}</alias>
            <build>
                <from>${jkube.generator.from}</from>
                <assembly>
                    <targetDir>/deployments</targetDir>
                    <layers>
                        <layer>
                            <id>jkube-resources</id>
                            <fileSets>
                                <fileSet>
                                    <directory>jkube-resources</directory>
                                    <outputDirectory>data</outputDirectory>
                                </fileSet>
                            </fileSets>
                        </layer>
                    </layers>
                </assembly>
            </build>
        </image>
    </images>
    <resources>
        <serviceAccounts>
            <serviceAccount>
                <name>${project.build.finalName}</name>
                <deploymentRef>${project.build.finalName}</deploymentRef>
            </serviceAccount>
        </serviceAccounts>
    </resources>
</configuration>
